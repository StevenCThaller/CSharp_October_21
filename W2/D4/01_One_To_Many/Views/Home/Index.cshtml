@using _01_One_To_Many.Models
@model IndexModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>it taco time</h1>

    <form asp-action="CreateTaco" asp-controller="Home">
        <span asp-validation-for="Form.Cheese"></span>
        <div>
            <label asp-for="Form.Cheese"></label>
            <input asp-for="Form.Cheese">
        </div>
        <p>Tortilla: </p>
        <span asp-validation-for="Form.Tortilla"></span>
        <div>
            <label for="flour">Flour</label>
            @Html.RadioButton("Form.Tortilla", "flour")
            <label for="corn">Corn</label>
            @Html.RadioButton("Form.Tortilla", "corn")
        </div>
        <span asp-validation-for="Form.ProteinId"></span>
        <div>
            <label asp-for="Form.ProteinId"></label>
            <select asp-for="Form.ProteinId">
                @foreach(Protein protein in Model.ProteinOptions)
                {
                    <option value="@protein.ProteinId">@protein.Name</option>
                }
            </select>
        </div>
        <span asp-validation-for="Form.Toppings"></span>
        <div>
            <label asp-for="Form.Toppings"></label>
            <input asp-for="Form.Toppings">
        </div>
        <div>
            <input type="submit" value="Submit">
        </div>
    </form>
</body>
</html>