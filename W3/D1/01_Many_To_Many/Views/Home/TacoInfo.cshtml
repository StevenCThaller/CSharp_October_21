@using _01_Many_To_Many.Models
@model Taco
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>thanks for your taco info!!</h1>
    <a href="/taco/clear">Reset Taco</a>
    <p>Cheese: @Model.Cheese</p>
    <p>Tortilla: @Model.Tortilla</p>
    <p>Protein: @Model.Protein.Name</p>
    <p>Toppings: </p>
    <ul>
        @foreach(TacoHasToppings join in Model.Toppings) @* .Toppings is the Navigation Property *@
        {   
            @* But remember, each item in that navigation property is not a Topping object,
                it's the TacoHasToppings object *@
            <li>@join.Topping.Name</li>
            @* Due to the fact that we need to go right through a middle object, it's imperative
            that we are actually including and thenincluding the right things *@
        }
    </ul>
</body>
</html>