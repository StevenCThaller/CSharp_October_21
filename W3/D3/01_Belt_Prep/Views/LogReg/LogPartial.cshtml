@model _01_Belt_Prep.Models.LoginUser

<form asp-action="Login" asp-controller="LogReg">
    <div class="form-group row mb-2">
        <span class="col-12 text-danger" asp-validation-for="LogEmail"></span>
        <label asp-for="LogEmail" class="col-4"></label>
        <div class="col-8">
            <input asp-for="LogEmail" class="form-control">
        </div>
    </div>
    <div class="form-group row mb-2">
        <span class="col-12 text-danger" asp-validation-for="LogPassword"></span>
        <label asp-for="LogPassword" class="col-4"></label>
        <div class="col-8">
            <input asp-for="LogPassword" class="form-control">
        </div>
    </div>
    
    <input class="col-4 offset-4 btn btn-primary" type="submit" value="Submit">
</form>