@using _01_Services_Workshop.Models
@model TruckInfoViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Foodtruck</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div class="container">
        <h1>Food Truck</h1>
        <div class="row">
            <h2>@Model.Truck.Name &#10084; @Model.Truck.FavoritedBy.Count</h2>
            <p>Style: @Model.Truck.Style</p>
            <p>Description: @Model.Truck.Description</p>
            <p>Average Rating: @Model.Truck.AverageRating.ToString("0.0")</p>
        </div>
        <div class="row scrollable">
            @foreach(var review in Model.Truck.Reviews)
            {
                <div class="col-8 offset-2">
                    <p class="col-3">
                        @review.Reviewer
                    </p>
                    <div class="col-9">
                        <p>"@review.Text"</p>
                        <p>Rating: @review.Rating</p>
                    </div>
                </div>
            }
        </div>
        <partial name="ReviewFormPartial" model="Model.Review" />
    </div>
</body>
</html>