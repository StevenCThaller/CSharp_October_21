@model _01_Services_Workshop.Models.User

<form asp-action="Register" asp-controller="LogReg">
    <div class="form-group row mb-2">
        <span class="col-12 text-danger" asp-validation-for="FirstName"></span>
        <label asp-for="FirstName" class="col-4"></label>
        <div class="col-8">
            <input asp-for="FirstName" class="form-control">
        </div>
    </div>
    <div class="form-group row mb-2">
        <span class="col-12 text-danger" asp-validation-for="LastName"></span>
        <label asp-for="LastName" class="col-4"></label>
        <div class="col-8">
            <input asp-for="LastName" class="form-control">
        </div>
    </div>
    <div class="form-group row mb-2">
        <span class="col-12 text-danger" asp-validation-for="Email"></span>
        <label asp-for="Email" class="col-4"></label>
        <div class="col-8">
            <input asp-for="Email" class="form-control">
        </div>
    </div>
    <div class="form-group row mb-2">
        <span class="col-12 text-danger" asp-validation-for="Password"></span>
        <label asp-for="Password" class="col-4"></label>
        <div class="col-8">
            <input asp-for="Password" class="form-control">
        </div>
    </div>
    <div class="form-group row mb-2">
        <span class="col-12 text-danger" asp-validation-for="ConfirmPassword"></span>
        <label asp-for="ConfirmPassword" class="col-4"></label>
        <div class="col-8">
            <input asp-for="ConfirmPassword" class="form-control">
        </div>
    </div>
    
    <input class="col-4 offset-4 btn btn-primary" type="submit" value="Submit">
</form>